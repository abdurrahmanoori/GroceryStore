@model GroceryStore.ViewModels.ItemCreateViewModel
@{
    ViewData["Title"] = "Create";
}
<h1>Create Item</h1>
<div class="container">
    <div class="row">
        <div class="col-6">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <select class="form-control" asp-for="Id" asp-items="@(new SelectList(Model.itemStoreKeepersList,"Id","Name"))">
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Type"></label>
                    <select class="form-control" asp-for="Type" asp-items="@(new SelectList(Model.itemStoreKeepersList,"Id","Type"))">
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Company">        </label>
                    <select class="form-control" asp-for="Company" asp-items="@(new SelectList(Model.itemStoreKeepersList,"Id","Company"))"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input class="form-control" asp-for="Price" />
                </div>
                <button type="submit" class="btn btn-primary">
                    Save
                </button>
            </form>
        </div>
    </div>
</div>




