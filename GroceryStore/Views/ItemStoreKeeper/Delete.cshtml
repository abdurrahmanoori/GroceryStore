@model GroceryStore.Models.ItemStoreKeeper
@{
    ViewData["Title"] = "Delete";
    string Category1 = ViewBag.SingleCategory.Name;
}

<h1 class="text-warning">Delete Store Keeper Item</h1>
<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <form asp-action="Delete" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input disabled class="form-control" asp-for="Name" placeholder="Enter Item Name" />
                </div>
                <div class="form-group">
                    <label asp-for="Company"></label>
                    <input disabled class="form-control" asp-for="Company" />
                </div>
                <div class="form-group">
                    <label asp-for="RealPrice"></label>
                    <input disabled class="form-control" asp-for="RealPrice" />
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input disabled class="form-control" asp-for="Description" />
                </div>
                <div class="form-group">
                    <label asp-for="MadeIn"></label>
                    <input disabled class="form-control" asp-for="MadeIn" />
                </div>
                <div class="form-group">
                    <label asp-for="Profit"></label>
                    <input disabled class="form-control" asp-for="Profit" />
                </div>
                <div class="form-group">
                    <label asp-for="Category"></label>
                    <input disabled class="form-control" asp-for="@Category1" />
                </div>
                <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                <a class="btn btn-primary btn-lg" asp-action="Index">Back</a>
            </form>
        </div>
    </div>
</div>